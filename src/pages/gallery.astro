---
import Layout from '../layouts/Layout.astro';

const galleryImages: { src: string; alt: string }[] = [];
---

<Layout title="Gallery | Nycole Ray" description="Performance photography, rehearsal images, and portraits of choreographer Nycole Ray.">
  <div class="mx-auto max-w-6xl px-6 py-16 md:py-24">
    <header class="mb-16">
      <h1 class="font-serif text-4xl md:text-5xl mb-4 text-purple">Gallery</h1>
      <p class="text-lg text-purple-light">
        Performance &amp; rehearsal photography
      </p>
    </header>

    {galleryImages.length > 0 ? (
      <div class="grid grid-cols-2 md:grid-cols-3 gap-4 md:gap-6">
        {galleryImages.map((image) => (
          <div class="relative aspect-[4/5] bg-cream-dark border border-mauve-light rounded-lg overflow-hidden">
            <img
              src={image.src}
              alt={image.alt}
              class="w-full h-full object-cover"
              loading="lazy"
            />
          </div>
        ))}
      </div>
    ) : (
      <div class="grid grid-cols-2 md:grid-cols-3 gap-4 md:gap-6">
        {[...Array(9)].map(() => (
          <div class="relative aspect-[4/5] bg-cream-dark border border-mauve-light rounded-lg flex items-center justify-center">
            <p class="text-mauve-dark text-sm text-center px-4">
              Photo coming soon
            </p>
          </div>
        ))}
      </div>
    )}
  </div>
</Layout>
